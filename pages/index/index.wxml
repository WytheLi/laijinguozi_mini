<!--pages/index/index.wxml-->
<view class="container">
  <view class="container_search">
    <view class="search_bar_form">
      <!-- 搜索框 -->
      <view class="search_bar_box">
        <icon type="search_icon" type="search" size="14"/>
        <input type="text" class="search_textbox" placeholder="请输入搜索内容"/>
      </view>
      <!-- 搜索按钮 -->
      <view class="search_button" bindtap="search">搜索</view>
    </view>
  </view>
</view>

<!-- 轮播图区域 -->
<swiper indicator-dots indicator-color="white" circular>
  <swiper-item wx:for="{{swiperList}}" wx:key="id" >
    <image src="{{item.image}}" mode=""/>
  </swiper-item>
</swiper>